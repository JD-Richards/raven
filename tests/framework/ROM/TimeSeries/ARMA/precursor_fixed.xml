<Simulation verbosity="debug">
  <TestInfo>
    <name>framework/ROM/TimeSeries/ARMA.PrecursorFixed</name>
    <author>talbpaul</author>
    <created>2018-06-04</created>
    <classesTested>SupervisedLearning.ARMA</classesTested>
    <description>
      Trains an ARMA with fixed sampling seeding as a precursor for other tests needing a fixed ARMA seed.
      Uses correlated generated with "dataGenerator", with time steps and a Fourier period listed in that
      module.
    </description>
  </TestInfo>

  <RunInfo>
    <WorkingDir>Precursors</WorkingDir>
    <Sequence>load,train,serialize,sample</Sequence>
  </RunInfo>

  <Files>
    <Input name="base">head.csv</Input>
    <Input name="pk">fixed.pk</Input>
  </Files>

  <Samplers>
    <MonteCarlo name="mc">
      <samplerInit>
        <limit>2</limit>
        <initialSeed>42</initialSeed>
      </samplerInit>
      <constant name="scaling">1</constant>
    </MonteCarlo>
  </Samplers>

  <Models>
    <ROM name="rom" subType="ARMA">
      <Target>A,B,C,Time</Target>
      <Features>scaling</Features>
      <pivotParameter>Time</pivotParameter>
      <seed>42</seed>
      <Pmax>2</Pmax>
      <Pmin>2</Pmin>
      <Qmax>2</Qmax>
      <Qmin>2</Qmin>
      <Fourier>50,30</Fourier>
      <FourierOrder>2,2</FourierOrder>
    </ROM>
  </Models>

  <Steps>
    <IOStep name="load">
      <Input class="Files" type="">base</Input>
      <Output class="DataObjects" type="HistorySet">base</Output>
    </IOStep>
    <IOStep name="serialize">
      <Input class="Models" type="ROM">rom</Input>
      <Output class="Files" type="">pk</Output>
    </IOStep>
    <RomTrainer name="train">
      <Input class="DataObjects" type="HistorySet">base</Input>
      <Output class="Models" type="ROM">rom</Output>
    </RomTrainer>
    <MultiRun name="sample">
      <Input class="DataObjects" type="PointSet">placeholder</Input>
      <Model class="Models" type="ROM">rom</Model>
      <Sampler class="Samplers" type="MonteCarlo">mc</Sampler>
      <Output class="DataObjects" type="DataSet">samples_ds</Output>
      <Output class="DataObjects" type="HistorySet">samples_hs</Output>
      <Output class="OutStreams" type="Print">fixed_samples_ds</Output>
      <Output class="OutStreams" type="Print">fixed_samples_hs</Output>
    </MultiRun>
  </Steps>

  <DataObjects>
    <PointSet name="placeholder">
      <Input>scaling</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <HistorySet name="base">
      <Input>scaling</Input>
      <Output>A,B,C</Output>
      <options>
        <pivotParameter>Time</pivotParameter>
      </options>
    </HistorySet>
    <HistorySet name="samples_hs">
      <Input>scaling</Input>
      <Output>A,B,C</Output>
      <options>
        <pivotParameter>Time</pivotParameter>
      </options>
    </HistorySet>
    <DataSet name="samples_ds">
      <Input>scaling</Input>
      <Output>A,B,C</Output>
      <Index var="Time">A,B,C</Index>
    </DataSet>
  </DataObjects>

  <OutStreams>
    <Print name="fixed_samples_ds">
      <source>samples_ds</source>
      <type>csv</type>
    </Print>
    <Print name="fixed_samples_hs">
      <source>samples_hs</source>
      <type>csv</type>
    </Print>
  </OutStreams>
</Simulation>
