<?xml version="1.0" ?>
<Simulation verbosity="debug">
  <TestInfo>
    <name>framework/ROM/TimeSeries/ARMA.VARMA</name>
    <author>talbpaul</author>
    <created>2018-05-15</created>
    <classesTested>SupervisedLearning.ARMA</classesTested>
    <description>
       This test checks the possibility to train an correlated ARMA+Fourier model and its
       capability to generate intrinsically stochastic time series with correlated results
    </description>
  </TestInfo>

  <RunInfo>
    <WorkingDir>CARMA</WorkingDir>
    <Sequence>read,train,sample,write</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <Steps>
    <IOStep name="read" pauseAtEnd="True">
      <Input class="Files" type="">source</Input>
      <Output class="DataObjects" type="HistorySet">training</Output>
    </IOStep>
    <RomTrainer name="train">
      <Input class="DataObjects" type="HistorySet">training</Input>
      <Output class="Models" type="ROM">CARMA</Output>
    </RomTrainer>
    <MultiRun name="sample">
      <Input class="DataObjects" type="PointSet">placeholder</Input>
      <Model class="Models" type="ROM">CARMA</Model>
      <Sampler class="Samplers" type="MonteCarlo">mc</Sampler>
      <Output class="DataObjects" type="HistorySet">samples</Output>
    </MultiRun>
    <IOStep name="write">
      <Input class="DataObjects" type="HistorySet">samples</Input>
      <Output class="OutStreams" type="Print">samples</Output>
      <Output class="OutStreams" type="Plot">plots</Output>
    </IOStep>
  </Steps>

  <Files>
    <Input name="source">correlated.csv</Input>
  </Files>

  <DataObjects>
    <PointSet name="placeholder">
      <Input>scaling</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <HistorySet name="training">
      <Input>scaling</Input>
      <Output>A,B</Output>
      <options>
        <pivotParameter>Time</pivotParameter>
      </options>
    </HistorySet>
    <HistorySet name="samples">
      <Input>scaling</Input>
      <Output>A,B</Output>
      <options>
        <pivotParameter>Time</pivotParameter>
      </options>
    </HistorySet>
  </DataObjects>

  <Models>
    <ROM name="CARMA" subType="ARMA">
      <Target>A,B,Time</Target>
      <Features>scaling</Features>
      <pivotParameter>Time</pivotParameter>
      <Pmax>2</Pmax>
      <Pmin>2</Pmin>
      <Qmax>1</Qmax>
      <Qmin>1</Qmin>
      <outTruncation>positive</outTruncation>
      <Fourier>604800,86400</Fourier>
      <FourierOrder>2,2</FourierOrder>
    </ROM>
  </Models>

  <Samplers>
    <MonteCarlo name="mc">
      <samplerInit>
        <limit>1</limit>
        <initialSeed>42</initialSeed>
      </samplerInit>
      <constant name="scaling">1.0</constant>
    </MonteCarlo>
  </Samplers>

  <OutStreams>
    <Print name="samples">
      <type>csv</type>
      <source>samples</source>
      <what>input, output</what>
    </Print>
    <Plot name="plot" overwrite="false">
      <plotSettings>
        <plot>
          <type>line</type>
          <x>samples|Output|Time</x>
          <y>samples|Output|A</y>
          <interpPointsX>86400</interpPointsX>
        </plot>
        <plot>
          <type>line</type>
          <x>samples|Output|Time</x>
          <y>samples|Output|B</y>
          <interpPointsX>86400</interpPointsX>
        </plot>
      </plotSettings>
      <actions>
        <how>png</how>
      </actions>
    </Plot>
  </OutStreams>

</Simulation>
